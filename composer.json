{
    "name": "oblak/woocommerce-nestpay-payment-gateway",
    "description": "NestPay Payment Gateway for WooCommerce",
    "version": "1.0.0",
    "autoload": {
        "psr-4": {
            "Oblak\\NPG\\": "lib/"
        }
    },
    "require": {
        "oblak/admin-notice-manager": "^1.0"
    },
    "require-dev": {
        "oblak/wordpress-coding-standard": "^1.0"
    },
    "scripts": {
        "install-codestandards": [
            "Dealerdirect\\Composer\\Plugin\\Installers\\PHPCodeSniffer\\Plugin::run"
        ],
        "post-install-cmd": [
            "@install-codestandards"
        ]
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
