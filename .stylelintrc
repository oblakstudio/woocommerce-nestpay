{
  "extends": "stylelint-config-standard",
  "ignoreFiles": ["**/*.js"],
  "ignore": [
    "no-descending-specificity",
    "selectors-within-list"
  ],
  "rules": {
    "no-descending-specificity": null,
    "no-empty-source": null,
    "string-quotes": "double",
    "value-keyword-case": [
      "lower",
      {
        "ignoreKeywords": [
          "BlinkMacSystemFont"
        ],
        "ignoreProperties": [
          "$main_font_family",
          "$font-family-base"
        ]
      }
    ],
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "extend",
          "at-root",
          "debug",
          "warn",
          "error",
          "if",
          "else",
          "for",
          "each",
          "while",
          "mixin",
          "include",
          "content",
          "return",
          "function",
          "tailwind",
          "apply",
          "responsive",
          "variants",
          "screen"
        ]
      }
    ]
  }
}
